{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {},
    "strict": true,
    "incremental": true,
    "skipLibCheck": true,
    // "strictNullChecks": true, // enabled in strict
    // "noImplicitAny": true, // enabled in strict
    "strictPropertyInitialization": false, // enabled in strict
    // "strictBindCallApply": false, // enabled in strict
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false
  }
}
